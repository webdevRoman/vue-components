@import 'vars'

html
  font-family: $font
  font-size: $fzText
  color: $cFontDark
  height: 100%
  @media screen and (max-width: $wL)
    font-size: 16px
  @media screen and (max-width: $wM)
    font-size: 15px
  @media screen and (max-width: $wS)
    font-size: 14px

body
  overflow-x: hidden

.container
  width: 100%
  display: flex
  flex: 0 0 auto
  flex-wrap: wrap
  position: relative
  margin: 0 auto
  max-width: $wcXL
  @media screen and (max-width: $wXL)
    max-width: $wcL
  @media screen and (max-width: $wL)
    max-width: $wcM
  @media screen and (max-width: $wM)
    max-width: $wcS
  @media screen and (max-width: $wS)
    max-width: $wcXS

.title
  font-size: 48px
  font-weight: bold
  @media screen and (max-width: $wL)
    font-size 36px
  @media screen and (max-width: $wS)
    font-size 24px

.text
  font-size: 18px
  line-height: 1.5
  @media screen and (max-width: $wL)
    font-size: 16px
  @media screen and (max-width: $wS)
    font-size: 14px